            "B8": ["滷肉飯", "滷肉飯", "滷肉飯", "滷肉飯", "滷肉飯", "滷肉飯", "珍珠奶茶"],
            "C1": ["老師", "老師", "老師", "老師", "老師", "老師", "學生"],
            "C2": ["醫生", "醫生", "醫生", "醫生", "醫生", "醫生", "護士"],
